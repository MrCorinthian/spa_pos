<Window x:Class="Urban.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Urban"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920" ResizeMode="NoResize" WindowState="Maximized" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Window.Resources>
        <Storyboard x:Key="SoldPanelIn">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)" Storyboard.TargetName="soldListGrid">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:1" Value="-500">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <BackEase EasingMode="EaseOut" Amplitude="0.1"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)" Storyboard.TargetName="closeSoldListBtn">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:1" Value="-500">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <BackEase EasingMode="EaseOut" Amplitude="0.1"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="SoldPanelOut">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)" Storyboard.TargetName="soldListGrid">
                <EasingDoubleKeyFrame KeyTime="0" Value="-500"/>
                <EasingDoubleKeyFrame KeyTime="0:0:1" Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <BackEase EasingMode="EaseIn" Amplitude="0.1"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)" Storyboard.TargetName="closeSoldListBtn">
                <EasingDoubleKeyFrame KeyTime="0" Value="-500"/>
                <EasingDoubleKeyFrame KeyTime="0:0:1" Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <BackEase EasingMode="EaseIn" Amplitude="0.1"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>

    <Window.Background>
        <ImageBrush ImageSource="Images/bggreen.jpg" Stretch="Uniform"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border BorderThickness="0" Background="#FF08B190" CornerRadius="40" Margin="24" MouseLeftButtonDown="Border_MouseLeftButtonDown">
                <TextBlock x:Name="branchNameTxt" TextWrapping="Wrap" Text="Branch Name" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Foreground="White" FontFamily="Segoe UI Light"/>
            </Border>
            <StackPanel Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock x:Name="dateTxt" TextWrapping="Wrap" Text="Date" FontSize="30" FontFamily="Segoe UI Light" HorizontalAlignment="Center" Foreground="#FF0F9441"/>
                <TextBlock x:Name="timeTxt" TextWrapping="Wrap" Text="Time" FontSize="22" FontFamily="Segoe UI Light" HorizontalAlignment="Center" Foreground="#FF0F9441"/>
            </StackPanel>
            <Border BorderBrush="Black" BorderThickness="1" Grid.Column="1" Margin="72,12" Background="#FFE4E4E4">
                <TextBlock x:Name="currentBalanceTxt" TextWrapping="Wrap" Text="ราคาทั้งหมด / Total" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe UI Light" FontSize="40" Foreground="#FF8D8D8D"/>
            </Border>
            <Image x:Name="myQr" HorizontalAlignment="Left" Height="126" Margin="159,24,0,-30" VerticalAlignment="Top" Width="126"/>

        </Grid>
        <Grid Grid.Row="1" Margin="12">
            <ScrollViewer x:Name="MainScrollview" HorizontalScrollBarVisibility="Auto"  VerticalScrollBarVisibility="Auto" PanningMode="Both" Margin="10" Width="1880" Height="820">
                <StackPanel x:Name="MassageSetContainer" Orientation="Horizontal">
                    <StackPanel Visibility="Collapsed">
                        <Grid Width="180" Height="70" Background="#FF0A60A8" Margin="3,0,3,12">
                            <TextBlock x:Name="textBlock2" TextWrapping="Wrap" Text="Foot Massage" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="22"/>
                        </Grid>
                        <Border BorderThickness="0" Width="176" Height="100" CornerRadius="25" Background="#FF9DC4E4" HorizontalAlignment="Center" Margin="0,3"/>
                        <Border BorderThickness="0" Width="176" Height="100" CornerRadius="25" Background="#FF9DC4E4" HorizontalAlignment="Center" Margin="0,3"/>
                        <Border BorderThickness="0" Width="176" Height="100" CornerRadius="25" Background="#FF9DC4E4" HorizontalAlignment="Center" Margin="0,3"/>
                        <Border BorderThickness="0" Width="176" Height="100" CornerRadius="25" Background="#FF9DC4E4" HorizontalAlignment="Center" Margin="0,3"/>
                        <Border BorderThickness="0" Width="176" Height="100" CornerRadius="25" Background="#FF9DC4E4" HorizontalAlignment="Center" Margin="0,3"/>
                        <Border BorderThickness="0" Width="176" Height="100" CornerRadius="25" Background="#FF9DC4E4" HorizontalAlignment="Center" Margin="0,3"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
        <Grid Grid.Row="2" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="24,0,0,0">
                <Border x:Name="staffAddBtn" BorderThickness="0" Width="160" Height="60" CornerRadius="100" Background="#FF08B190" MouseLeftButtonDown="staffAddBtn_MouseLeftButtonDown">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                        <TextBlock x:Name="textBlock1" TextWrapping="Wrap" Text="Staff + 1 ( " Foreground="White" FontSize="16" FontFamily="Segoe UI Light"/>
                        <TextBlock x:Name="staffAmountTxt" TextWrapping="Wrap" Text="0" Foreground="White" FontSize="16" FontFamily="Segoe UI Light"/>
                        <TextBlock x:Name="textBlock1_Copy1" TextWrapping="Wrap" Text=" )" Foreground="White" FontSize="16" FontFamily="Segoe UI Light"/>
                    </StackPanel>
                </Border>
                <Border x:Name="reportBtn" BorderThickness="0" Width="160" Height="60" CornerRadius="100" Background="#FF08B190" Margin="12,0,0,0" MouseLeftButtonDown="reportBtn_MouseLeftButtonDown">
                    <TextBlock x:Name="textBlock1_Copy" TextWrapping="Wrap" Text="รายงาน / Report" Foreground="White" FontSize="16" FontFamily="Segoe UI Light" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <Grid>
                    <Border x:Name="vipBtn" BorderThickness="0" Width="160" Height="60" CornerRadius="100" Background="#FF084DB1" Margin="12,0,0,0" MouseLeftButtonDown="vipBtn_MouseLeftButtonDown">
                        <TextBlock x:Name="textBlock1x_Copy" TextWrapping="Wrap" Text="VIP Card" Foreground="White" FontSize="16" FontFamily="Segoe UI Light" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <Border x:Name="cancelVipBtn" BorderThickness="0" Width="160" Height="60" CornerRadius="100" Background="#FFCF0000" Margin="12,0,0,0" MouseLeftButtonDown="cancelVipBtn_MouseLeftButtonDown" Visibility="Collapsed">
                        <TextBlock x:Name="textBlock2x_Copy" TextWrapping="Wrap" Text="Cancel VIP Card" Foreground="White" FontSize="16" FontFamily="Segoe UI Light" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </StackPanel>
            <StackPanel x:Name="checkoutAndClearGrid" Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed">
                <Border x:Name="checkoutSummaryBtn" BorderThickness="0" Width="160" Height="60" CornerRadius="100" Background="#FF08B190" MouseLeftButtonDown="checkoutSummaryBtn_MouseLeftButtonDown">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                        <TextBlock x:Name="textBlock3" TextWrapping="Wrap" Text="สรุปยอด / Checkout" Foreground="White" FontSize="16" FontFamily="Segoe UI Light"/>
                    </StackPanel>
                </Border>
                <Grid>
                    <Border x:Name="clearSelectedBtn" BorderThickness="0" Width="160" Height="60" CornerRadius="100" Background="#FFFF1F14" Margin="12,0,0,0" MouseLeftButtonDown="clearSelectedBtn_MouseLeftButtonDown">
                        <TextBlock x:Name="textBlock1_Copy3" TextWrapping="Wrap" Text="ยกเลิก / Clear" Foreground="White" FontSize="16" FontFamily="Segoe UI Light" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <Border x:Name="clearSelectedForVIPBtn" BorderThickness="0" Width="160" Height="60" CornerRadius="100" Background="#FFFF1F14" Margin="12,0,0,0" MouseLeftButtonDown="clearSelectedForVIPBtn_MouseLeftButtonDown" Visibility="Collapsed">
                        <TextBlock x:Name="textBlock1_Copy3x" TextWrapping="Wrap" Text="ยกเลิก / Clear" Foreground="White" FontSize="16" FontFamily="Segoe UI Light" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </StackPanel>
            <Grid Grid.Column="2">
                <Border x:Name="otherSaleBtn" BorderThickness="0" Width="160" Height="60" CornerRadius="100" Background="#FF08B190" Margin="0" MouseLeftButtonDown="otherSaleBtn_MouseLeftButtonDown" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock x:Name="textBlock1_Copy4" TextWrapping="Wrap" Text="อื่นๆ / Other Sale" Foreground="White" FontSize="16" FontFamily="Segoe UI Light" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <Image x:Name="checkoutBtn" Source="Images\exit.png" Cursor="Hand" HorizontalAlignment="Right" VerticalAlignment="Center" Width="70" Height="70" Margin="0,0,24,0" MouseLeftButtonDown="checkoutBtn_MouseLeftButtonDown"/>
            </Grid>
        </Grid>

        <Grid x:Name="InitMoneyGrid" Background="#E5FFFFFF" Grid.RowSpan="3" Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock x:Name="textBlock10" TextWrapping="Wrap" Text="ใส่จำนวนเงินเริ่มต้น / Input the initial money" FontSize="36"/>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,48,0,0">
                    <TextBox x:Name="showInitMoneyTb" TextWrapping="Wrap" Width="300" FontSize="36" BorderBrush="#FF0C2E94" VerticalContentAlignment="Center" Padding="12,12,0,12" Margin="2,0" IsEnabled="False"/>
                    <Grid Height="300" Margin="0,6,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Button x:Name="button1" Content="7" Margin="2" FontSize="20" Click="Number_Click"/>
                        <Button x:Name="button2" Content="8" Grid.Column="1" Margin="2" FontSize="20" Click="Number_Click" />
                        <Button x:Name="button3" Content="9" Grid.Column="2" Margin="2" FontSize="20" Click="Number_Click" />
                        <Button x:Name="deleteBtn" Content="&lt;" Grid.Column="3" Margin="2" FontSize="20" Click="deleteBtn_Click" />
                        <Button x:Name="button5" Content="4" Grid.Row="1" Margin="2" FontSize="20" Click="Number_Click" />
                        <Button x:Name="button6" Content="5" Grid.Column="1"  Grid.Row="1" Margin="2" FontSize="20" Click="Number_Click" />
                        <Button x:Name="button7" Content="6" Grid.Column="2"  Grid.Row="1" Margin="2" FontSize="20" Click="Number_Click" />
                        <Button x:Name="clearBtn" Content="C" Grid.Column="3"  Grid.Row="1" Margin="2" FontSize="20" Click="clearBtn_Click"/>
                        <Button x:Name="button9" Content="1" Grid.Row="2" Margin="2" FontSize="20" Click="Number_Click" />
                        <Button x:Name="button10" Content="2" Grid.Column="1"  Grid.Row="2" Margin="2" FontSize="20" Click="Number_Click" />
                        <Button x:Name="button11" Content="3" Grid.Column="2"  Grid.Row="2" Margin="2" FontSize="20" Click="Number_Click" />
                        <Button x:Name="button13" Content="0" Grid.Row="3" Grid.ColumnSpan="3" FontSize="20" Margin="2" Click="Number_Click"/>
                        <Button x:Name="enterBtn" Content="Enter" Grid.Column="3"  Grid.Row="2" Grid.RowSpan="2" Margin="2" FontSize="20" Click="enterBtn_Click" Background="#FF048E37" Foreground="White"/>
                    </Grid>
                </StackPanel>
            </StackPanel>
            <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,0,0,12">
                <TextBlock x:Name="textBlock12" TextWrapping="Wrap" Text="Internet Status : " FontSize="16" FontWeight="Bold"/>
                <TextBlock x:Name="availableTbl" TextWrapping="Wrap" Text="Available" FontSize="16" FontWeight="Bold" Foreground="#FF08C71F" Visibility="Collapsed"/>
                <TextBlock x:Name="unavailableTbl" TextWrapping="Wrap" Text="Unavailable" FontSize="16" FontWeight="Bold" Foreground="#FFF60C0C" Visibility="Collapsed"/>
            </StackPanel>
        </Grid>
        <Grid x:Name="PasswordLockGrid" Background="#E5FFFFFF" Grid.RowSpan="3" Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock x:Name="textBlock10b" TextWrapping="Wrap" Text="ใส่รหัสผ่าน 4 หลัก / Input 4 digit passcode" FontSize="36"/>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,48,0,0">
                    <PasswordBox x:Name="showCodeTb" Width="300" FontSize="36" BorderBrush="#FF0C2E94" VerticalContentAlignment="Center" Padding="0,12" Margin="2,0" IsEnabled="False" HorizontalContentAlignment="Center"/>
                    <Grid Height="300" Margin="0,6,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Button x:Name="button1a" Content="7" Margin="2" FontSize="20" Click="passwordNumber_Click"/>
                        <Button x:Name="button2a" Content="8" Grid.Column="1" Margin="2" FontSize="20" Click="passwordNumber_Click" />
                        <Button x:Name="button3a" Content="9" Grid.Column="2" Margin="2" FontSize="20" Click="passwordNumber_Click" />
                        <Button x:Name="deleteCodeBtn" Content="&lt;" Grid.Column="3" Margin="2" FontSize="20" Click="deleteCodeBtn_Click" />
                        <Button x:Name="button5a" Content="4" Grid.Row="1" Margin="2" FontSize="20" Click="passwordNumber_Click" />
                        <Button x:Name="button6a" Content="5" Grid.Column="1"  Grid.Row="1" Margin="2" FontSize="20" Click="passwordNumber_Click" />
                        <Button x:Name="button7a" Content="6" Grid.Column="2"  Grid.Row="1" Margin="2" FontSize="20" Click="passwordNumber_Click" />
                        <Button x:Name="clearCodeBtn" Content="C" Grid.Column="3"  Grid.Row="1" Margin="2" FontSize="20" Click="clearCodeBtn_Click"/>
                        <Button x:Name="button9a" Content="1" Grid.Row="2" Margin="2" FontSize="20" Click="passwordNumber_Click" />
                        <Button x:Name="button10a" Content="2" Grid.Column="1"  Grid.Row="2" Margin="2" FontSize="20" Click="passwordNumber_Click" />
                        <Button x:Name="button11a" Content="3" Grid.Column="2"  Grid.Row="2" Margin="2" FontSize="20" Click="passwordNumber_Click" />
                        <Button x:Name="button13a" Content="0" Grid.Row="3" Grid.ColumnSpan="3" FontSize="20" Margin="2" Click="passwordNumber_Click"/>
                        <Button x:Name="enterCodeBtn" Content="Enter" Grid.Column="3"  Grid.Row="2" Grid.RowSpan="2" Margin="2" FontSize="20" Click="enterCodeBtn_Click" Background="#FF048E37" Foreground="White"/>
                    </Grid>
                    <Button x:Name="closeCodeBtn" Content="Close" FontSize="20" Margin="2" Click="closeCode_Click" Height="71.2" Background="Red" Foreground="White"/>
                </StackPanel>
            </StackPanel>
        </Grid>
        <Grid x:Name="summaryPopupGrid" Background="#CC707070" Grid.RowSpan="3" Visibility="Collapsed">
            <Grid Width="1200" Height="850" Background="White" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="79"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="210"/>
                    <RowDefinition Height="130"/>
                    <RowDefinition Height="90"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1000"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid x:Name="CheckoutHeader" Background="#FF08B190">
                    <TextBlock x:Name="textBlock" TextWrapping="Wrap" Text="สรุปยอด และรายการทั้งหมด / Checkout Summary" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" FontFamily="Segoe UI Light" Foreground="White"/>
                </Grid>
                <StackPanel Grid.Row="1">
                    <Grid Height="41" Background="#FFDFEEEB">
                        <TextBlock x:Name="textBlockSubTitle" TextWrapping="Wrap" Text="รายการขาย / Sell item" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="22" FontFamily="Segoe UI Light" Foreground="Black" Margin="24,0,0,0"/>
                    </Grid>
                    <ScrollViewer PanningMode="VerticalOnly" Height="300">
                        <StackPanel x:Name="summaryContainer"/>
                    </ScrollViewer>
                </StackPanel>
                <StackPanel Grid.Row="2">
                    <Grid Height="40" Background="#FFDFEEEB">
                        <TextBlock x:Name="textBlockSubTitleDiscount" TextWrapping="Wrap" Text="รายการส่วนลด / Discount item" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="22" FontFamily="Segoe UI Light" Foreground="Black" Margin="24,0,0,0"/>
                    </Grid>
                    <ScrollViewer PanningMode="VerticalOnly" Height="170">
                        <StackPanel x:Name="summaryDiscountContainer"/>
                    </ScrollViewer>
                </StackPanel>
                <StackPanel Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <TextBlock x:Name="textBlock4" TextWrapping="Wrap" Text="Total" FontSize="22" HorizontalAlignment="Center" Foreground="#FF0346BB" FontFamily="Segoe UI Light" FontWeight="Bold"/>
                    <TextBlock x:Name="summaryAmountTxt" TextWrapping="Wrap" Text="500.00" FontSize="55" HorizontalAlignment="Center" Foreground="#FF0346BB"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <Border x:Name="payCreditBtn" BorderThickness="0" Width="180" Height="60" CornerRadius="100" Background="#FFFF972E" MouseLeftButtonDown="payCreditBtn_MouseLeftButtonDown" Margin="0">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                            <TextBlock x:Name="textBlock313" TextWrapping="Wrap" Text="บัตรเครดิต / Credit Card" Foreground="White" FontSize="16" FontFamily="Segoe UI Light"/>
                        </StackPanel>
                    </Border>
                    <Border x:Name="payBtn" BorderThickness="0" Width="160" Height="60" CornerRadius="100" Background="#FF2408B1" MouseLeftButtonDown="payBtn_MouseLeftButtonDown" Margin="12,0,0,0">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                            <TextBlock x:Name="textBlock31" TextWrapping="Wrap" Text="เงินสด / Cash" Foreground="White" FontSize="16" FontFamily="Segoe UI Light"/>
                        </StackPanel>
                    </Border>
                    <Border x:Name="cancelPayBtn" BorderThickness="0" Width="160" Height="60" CornerRadius="100" Background="#FFFF1F14" Margin="12,0,0,0" MouseLeftButtonDown="cancelPayBtn_MouseLeftButtonDown">
                        <TextBlock x:Name="textBlock1_Copy32" TextWrapping="Wrap" Text="ยกเลิก / Cancel" Foreground="White" FontSize="16" FontFamily="Segoe UI Light" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </StackPanel>
                <Grid Grid.Column="1" Background="#FF0063C5">
                    <TextBlock x:Name="tblVoucher" TextWrapping="Wrap" Text="คูปอง หรือบัตรเงินสด" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" FontFamily="Segoe UI Light" Foreground="White"/>
                </Grid>
                <StackPanel x:Name="discountSrcContainer" Grid.Column="1" Grid.Row="1" Grid.RowSpan="4"/>
            </Grid>
        </Grid>
        <Grid x:Name="otherSaleListPopupGrid" Background="#CC707070" Grid.RowSpan="3" Visibility="Collapsed">
            <Grid Width="850" Height="650" Background="White" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="79"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="90"/>
                </Grid.RowDefinitions>
                <Grid Background="#FF08B190">
                    <TextBlock x:Name="textBlocka" TextWrapping="Wrap" Text="รายการขายอื่นๆ / Other Sale List" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22" FontFamily="Segoe UI Light" Foreground="White"/>
                </Grid>
                <ScrollViewer Grid.Row="1" PanningMode="VerticalOnly">
                    <StackPanel x:Name="otherSaleListContainer"/>
                </ScrollViewer>
                <Border x:Name="closeOtherListBtn" Grid.Row="2" BorderThickness="0" Width="160" Height="60" CornerRadius="100" Background="#FFFF1F14" Margin="12,0,0,0" MouseLeftButtonDown="closeOtherListBtn_MouseLeftButtonDown" VerticalAlignment="Top" HorizontalAlignment="Center">
                    <TextBlock x:Name="textBlock1_Copy321" TextWrapping="Wrap" Text="ปิด / Close" Foreground="White" FontSize="16" FontFamily="Segoe UI Light" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </Grid>
        </Grid>
        <Grid x:Name="summaryOtherPopupGrid" Background="#CC707070" Grid.RowSpan="3" Visibility="Collapsed">
            <Grid Width="850" Height="650" Background="White" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="79"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="130"/>
                    <RowDefinition Height="90"/>
                </Grid.RowDefinitions>
                <Grid Background="#FF08B190">
                    <TextBlock x:Name="textBlockb" TextWrapping="Wrap" Text="สรุปยอด และรายการทั้งหมด / Checkout Summary" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22" FontFamily="Segoe UI Light" Foreground="White"/>
                </Grid>
                <ScrollViewer Grid.Row="1" PanningMode="VerticalOnly" Height="351">
                    <StackPanel x:Name="summaryOtherContainer"/>
                </ScrollViewer>
                <StackPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <TextBlock x:Name="textBlock4b" TextWrapping="Wrap" Text="Total" FontSize="22" HorizontalAlignment="Center" Foreground="#FF0346BB" FontFamily="Segoe UI Light" FontWeight="Bold"/>
                    <TextBlock x:Name="summaryOtherAmountTxt" TextWrapping="Wrap" Text="500.00" FontSize="55" HorizontalAlignment="Center" Foreground="#FF0346BB"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <Border x:Name="payCreditOtherBtn" BorderThickness="0" Width="180" Height="60" CornerRadius="100" Background="#FFFF972E" MouseLeftButtonDown="payCreditOtherBtn_MouseLeftButtonDown" Margin="0">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                            <TextBlock x:Name="textBlock31ba" TextWrapping="Wrap" Text="บัตรเครดิต / Credit Card" Foreground="White" FontSize="16" FontFamily="Segoe UI Light"/>
                        </StackPanel>
                    </Border>
                    <Border x:Name="payOtherBtn" BorderThickness="0" Width="160" Height="60" CornerRadius="100" Background="#FF2408B1" MouseLeftButtonDown="payOtherBtn_MouseLeftButtonDown" Margin="12,0,0,0">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                            <TextBlock x:Name="textBlock31b" TextWrapping="Wrap" Text="เงินสด / Cash" Foreground="White" FontSize="16" FontFamily="Segoe UI Light"/>
                        </StackPanel>
                    </Border>
                    <Border x:Name="cancelPayOtherBtn" BorderThickness="0" Width="160" Height="60" CornerRadius="100" Background="#FFFF1F14" Margin="12,0,0,0" MouseLeftButtonDown="cancelPayOtherBtn_MouseLeftButtonDown">
                        <TextBlock x:Name="textBlock1_Copy32b" TextWrapping="Wrap" Text="ยกเลิก / Cancel" Foreground="White" FontSize="16" FontFamily="Segoe UI Light" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
